<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="MobileDictionary.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--  Color Resources  -->
                <ResourceDictionary Source="Styles/Colors.xaml" />

                <!--  Font Resources  -->
                <ResourceDictionary Source="Styles/Fonts.xaml" />

                <!--  Tab Resources  -->
                <ResourceDictionary Source="Styles/Tabs.xaml" />

                <!--  Page Resources  -->
                <ResourceDictionary Source="Styles/Pages.xaml" />

                <!--  Text Resources  -->
                <ResourceDictionary Source="Styles/Texts.xaml" />

                <!--  Other Resources  -->
                <ResourceDictionary Source="Styles/Others.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>