<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MobileDictionary.Controls.WordDetail"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Word Detail Control  -->

    <!--  Main Grid  -->
    <Grid>

        <!--  Meaning label for the word  -->
        <Label
            Padding="30"
            FontFamily="OpenSansRegular"
            FontSize="{StaticResource FontSizeRegular}"
            HorizontalOptions="Start"
            LineHeight="1.3"
            Text="{Binding TurkceAnlam, Mode=TwoWay}"
            TextColor="{AppThemeBinding Light={StaticResource PrimaryBlack},
                                        Dark={StaticResource SubTitleTextDark}}"
            VerticalOptions="Start" />
    </Grid>
</ContentView>